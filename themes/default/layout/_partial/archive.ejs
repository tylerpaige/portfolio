<% if (splash){ %>
  <section class="now">
    <div class="section-gradient js-sticky-gradient">
      <div class="js-gradient-sentinel"></div>
    </div>
    <h3 class="js-sticky-hed">Featured</h3>
    <% site.categories.findOne({name: 'present'}).posts.sort('date', -1).each(function(post){ %>
      <%- partial('article', {post: post}) %>
    <% }) %>
  </section>
<% } %>
<section class="past">
  <div class="section-gradient js-sticky-gradient">
    <div class="js-gradient-sentinel"></div>
  </div>
  <h3 class="js-sticky-hed">Archived</h3>
  <% page.posts.each(function(post) { %>

    <% if(post.categories.data.length === 0 || post.categories.data[0].name == 'past') { %>
      <%- partial('article', {post: post, index: true}) %>
    <% } %>
  <% }) %>
</section>

<%- partial('pagination') %>
