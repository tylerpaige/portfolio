<% if (splash){ %>
  <section class="now">
    <h3>Featured</h3>
    <div class="section-gradient"></div>
    <% site.categories.findOne({name: 'present'}).posts.sort('date', -1).each(function(post){ %>
      <%- partial('article', {post: post}) %>
    <% }) %>
  </section>
<% } %>
<section class="past">
  <h3>Archived</h3>
  <div class="section-gradient"></div>
  <% page.posts.each(function(post) { %>

    <% if(post.categories.data.length === 0 || post.categories.data[0].name == 'past') { %>
      <%- partial('article', {post: post, index: true}) %>
    <% } %>
  <% }) %>
</section>

<%- partial('pagination') %>
